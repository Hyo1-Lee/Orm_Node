<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>관리자계정 신규등록</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">홈</a>
            </li>
            <li class="breadcrumb-item">
                <a>관리자계정</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>신규등록</strong>
            </li>
        </ol>
    </div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/admin/modify/<%=admin.admin_member_id%>" id='articleForm' method="post">
    <div class="wrapper wrapper-content">
        <div class="ibox-content m-b-sm border-bottom">
            <!--우측 콘텐츠 영역 -->
            <!-- <div class="wrapper wrapper-content animated fadeInRight ecommerce"> -->

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">소속회사</label>
                        <select name="company_code" id="company_code" class="form-control">
                            <option value="0" <% if( admin.company_code=="0" ){ %> selected <% } %>>선택</option>
                            <option value="1" <% if( admin.company_code=="1" ){ %> selected <% } %>>SAMSUNG</option>
                            <option value="2" <% if( admin.company_code=="2" ){ %> selected <% } %>>APPLE</option>
                            <option value="3" <% if( admin.company_code=="3" ){ %> selected <% } %>>LG</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">부서명</label>
                        <select name="department_name" id="department_name" class="form-control">
                            <option value="0" <% if( admin.company_code=="0" ){ %> selected <% } %>>선택</option>
                            <option value="인사" <% if( admin.department_name=="인사" ){ %> selected <% } %>>인사</option>
                            <option value="IT" <% if( admin.department_name=="IT" ){ %> selected <% } %>>IT</option>
                            <option value="마케팅" <% if( admin.compadepartment_nameny_code=="마케팅" ){ %> 마케팅 <% } %>>LG
                            </option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">이름</label>
                        <input type="text" name="admin_name" class="form-control" value="<%=admin.admin_name%>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">아이디</label>
                        <input type="text" name="admin_id" class="form-control" value="<%=admin.admin_id%>" readonly>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">비밀번호</label>
                        <input type="password" name="admin_password" class="form-control"
                            value="<%=admin.admin_password%>" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">이메일</label>
                        <input type="text" name="email" class="form-control" value="<%=admin.email%>">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">전화번호</label>
                        <input type="text" name="telephone" class="form-control" value="<%=admin.telephone%>">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">계정활성화상태</label>
                        <select name="use_status_code" id="use_status_code" class="form-control"
                            value="<%=admin.use_status_code%>">
                            <option value=1>활성화</option>
                            <option value=0>비활성화</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- 저장/목록 이동 버튼 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/channel/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </div>
</form>